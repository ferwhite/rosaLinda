gris_azulado = #353C45
azul = #3A99D8

body
	font-size 16px
	background url("../img/PRINCIPAL -01.jpg") no-repeat
	background-size 100%

.cuerpo
	margin 1em 6em 2em 6em

.slider
	background url('../img/BARRA-01.png')
	background-size 100% 100%
	height 20.1em

.cuerpoAccesorios
	margin 1em 0em
	width 100%
	background pink
	position relative
	overflow hidden

.accesoriosIzq
	float left
	width: 68%
	background red

.menu
	width 100%
	background gris_azulado
	text-align center
	position relative
	border-radius 5px

.menuItem
	margin 0
	padding 0
	list-style none
	.item
		display inline-block
		a
			color black
			text-decoration none
			display block
			padding: 0.7em 2em;
			&hover:
				background azul
				color white

.accesorioDrechos
	float right
	width 30%
	background green